@import '../../stylus_lib'

.bordered-input
  -webkit-appearance: none
  border 1px solid light-gray-border-color
  border-radius 0
  box-shadow none
  padding 10px
  width 100%
  font-size default-font-size
  serif()
  font-size default-font-size
  margin 0
  display inline-block
  background-color: #000
  color: #FFF
  transition: background-color 0.6s, border-color 0.6s, color 0.6s
  &:focus, &:active
    border-color highlight-color
    outline none
    background-color: white
    color: #333

.error, .success
  display: none

.success
  margin-top: 10px

.error
  margin-bottom: 15px
  color: bad-red-color
