doctype html
html( class=htmlClass )
  head
    title Download the New Artsy iPhone App
    meta( name="og:title" content="Download the New Artsy iPhone App" )
    meta( name="description" content="The art world in your pocket. Explore current shows and fairs, discover #{sd.WORKS_NUM} artworks connected by The Art Genome Project, and collect your favorites." )
    meta( name="og:description" content="The art world in your pocket. Explore current shows and fairs, discover #{sd.WORKS_NUM} artworks connected by The Art Genome Project, and collect your favorites." )
    meta( name="twitter:description" content="The art world in your pocket. Explore current shows and fairs, discover #{sd.WORKS_NUM} artworks connected by The Art Genome Project, and collect your favorites." )
    meta( content=("http:" + sd.ASSET_PATH + 'og_image.png') property='og:image' )
    meta( content='website' property='og:type' )
    meta( content='summary' property='twitter:card' )
    meta( content='Artsy' property='og:site_name' )
    meta( content='20317' property='fb:admins' )
    meta( content='@artsy' property='twitter:site' )
    meta( content='Artsy' name='author' )
    meta( content='Copyright (c) 2013, by Artsy LLC., All Rights Reserved.' name='copyright' )
    meta( name='viewport', content="width=device-width,maximum-scale=1.0,user-scalable=no" )
    link( type='text/css', rel='stylesheet', href=(sd.ASSET_PATH + 'all' + sd.CSS_EXT) )
    link( rel='icon', type='image/x-icon', href=(sd.ASSET_PATH + 'favicon.ico' ) )
    if sd.NODE_ENV != 'test' && sd.BROWSER && sd.BROWSER.family != 'PhantomJS'
      //- Mixpanel & Google analytics script
      include ./google_analytics.html
      include ./mixpanel.html
      //- Fonts.com font loader
      script( type="text/javascript", src="//fast.fonts.net/jsapi/f7f47a40-b25b-44ee-9f9c-cfdfc8bb2741.js", async )

    //- Wire up sharify
    if sharify
      != sharify.script()

    //- Add Google's jQuery
    script( src="//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js" )
    block head
  body
    block body
    script( src=(sd.ASSET_PATH + 'all' + sd.JS_EXT) )
